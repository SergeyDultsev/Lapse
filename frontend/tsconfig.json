{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@assets/*": ["assets/*"],
      "@entities": ["entities/index.ts"],
      "@entities/*": ["entities/*"],
      "@features": ["features/index.ts"],
      "@features/*": ["features/*"],
      "@pages": ["pages/index.ts"],
      "@pages/*": ["pages/*"],
      "@providers": ["providers/index.ts"],
      "@providers/*": ["providers/*"],
      "@shared": ["shared/index.ts"],
      "@shared/*": ["shared/*"],
      "@widgets": ["widgets/index.ts"],
      "@widgets/*": ["widgets/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "node_modules/next/dist/build/webpack/loaders/next-style-loader/runtime/injectStylesIntoLinkTag.d.ts"
  ],
  "exclude": ["node_modules"]
}
